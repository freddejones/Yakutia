<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="yakutiaPU" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>jdbc/testDB</jta-data-source>
        <class>nu.danielsundberg.yakutia.entity.Game</class>
        <class>nu.danielsundberg.yakutia.entity.GamePlayer</class>
        <class>nu.danielsundberg.yakutia.entity.Player</class>
        <class>nu.danielsundberg.yakutia.entity.Unit</class>
        <class>nu.danielsundberg.yakutia.entity.PlayerFriend</class>
        <properties>
                <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect"/>
                <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <!--<property name="hibernate.hbm2ddl.auto" value="none" />-->
        </properties>
    </persistence-unit>
</persistence>